<?xml version="1.0"?>
<robot name="qadru_bot">

  <!-- Root Link (base_link) -->
  <link name="base_link"/>

  <!-- Body Link -->
  <link name="body">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://qadru_bot/meshes/body_final.stl" scale="1 1 1"/>
      </geometry>
    </visual>
  </link>

  <!-- Fixed Joint: base_link to body -->
  <joint name="base_to_body" type="fixed">
    <parent link="base_link"/>
    <child link="body"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>
  </joint>


  <!-- Thigh Front Left Link -->
  <link name="thigh_fl">
    <visual>
      <!-- Position the mesh so the upper end aligns with the joint -->
      <origin xyz="0 0.03 -0.075" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://qadru_bot/meshes/thigh_link.stl" scale="1 1 1"/>
      </geometry>
    </visual>
  </link>

  <!-- Revolute Joint: body to front left thigh -->
  <joint name="thigh_joint_fl" type="revolute">
    <parent link="body"/>
    <child link="thigh_fl"/>
    <!-- Attach the joint at the upper end of the thigh -->
    <origin xyz="0.24 0.03 -0.025" rpy="0 0 0"/>
    <!-- Rotate along the Y-axis -->
    <axis xyz="0 1 0"/>
    <!-- Limits for rotation -->
    <limit effort="10" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>


  <!-- Thigh Rear Left Link -->
  <link name="thigh_rl">
    <visual>
      <!-- Position the mesh so the upper end aligns with the joint -->
      <origin xyz="0 0.03 -0.075" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://qadru_bot/meshes/thigh_link.stl" scale="1 1 1"/>
      </geometry>
    </visual>
  </link>

  <!-- Revolute Joint: body to rear left thigh -->
  <joint name="thigh_joint_rl" type="revolute">
    <parent link="body"/>
    <child link="thigh_rl"/>
    <!-- Attach the joint at the upper end of the thigh -->
    <origin xyz="-0.24 0.03 -0.025" rpy="0 0 0"/>
    <!-- Rotate along the Y-axis -->
    <axis xyz="0 1 0"/>
    <!-- Limits for rotation -->
    <limit effort="10" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>


  <!-- Thigh Rear Right Link -->
  <link name="thigh_rr">
    <visual>
      <!-- Position the mesh so the upper end aligns with the joint -->
      <origin xyz="0 -0.03 -0.075" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://qadru_bot/meshes/thigh_link.stl" scale="1 1 1"/>
      </geometry>
    </visual>
  </link>

  <!-- Revolute Joint: body to rear right thigh -->
  <joint name="thigh_joint_rr" type="revolute">
    <parent link="body"/>
    <child link="thigh_rr"/>
    <!-- Attach the joint at the upper end of the thigh -->
    <origin xyz="-0.24 -0.03 -0.025" rpy="0 0 0"/>
    <!-- Rotate along the Y-axis -->
    <axis xyz="0 1 0"/>
    <!-- Limits for rotation -->
    <limit effort="10" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>


  <!-- Thigh Front Right Link -->
  <link name="thigh_fr">
    <visual>
      <!-- Position the mesh so the upper end aligns with the joint -->
      <origin xyz="0 -0.03 -0.075" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://qadru_bot/meshes/thigh_link.stl" scale="1 1 1"/>
      </geometry>
    </visual>
  </link>

  <!-- Revolute Joint: body to front right thigh -->
  <joint name="thigh_joint_fr" type="revolute">
    <parent link="body"/>
    <child link="thigh_fr"/>
    <!-- Attach the joint at the upper end of the thigh -->
    <origin xyz="0.24 -0.03 -0.025" rpy="0 0 0"/>
    <!-- Rotate along the Y-axis -->
    <axis xyz="0 1 0"/>
    <!-- Limits for rotation -->
    <limit effort="10" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>

</robot>
